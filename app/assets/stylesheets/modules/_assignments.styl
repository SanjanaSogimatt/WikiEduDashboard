.table tr.assignment td
  border none
  padding 10px 20px
  .title
    overflow-wrap anywhere

.table tr.assignment-section-header td
  border none
  padding-bottom 10px

tr.assignment-section-header h3
  font-size 16px
  margin-bottom 0

.assignment-popover
  tr.assignment
    td
      width 100%
      display flex
      a
        max-width 500px
        display block
        white-space nowrap
        overflow hidden
        text-overflow ellipsis

.find-articles-section
  background athens
  border-top 1px solid darken(athens, 10%)
  text-align center
  td
    display block
    width 100%

.select-container
  display flex
  flex-direction column

.edit_sandbox_url_input
  min-width: 30rem;

.edit-sandbox-username-form
  display flex
  flex-direction column
  gap 15px
  padding 10px 0

  .edit-sandbox-instructions
    margin-bottom 5px
    
    .instruction-text
      font-size 14px
      color #444
      line-height 1.4
      margin 0

  .input-group
    display flex
    flex-direction column
    gap 5px

    .input-label
      font-weight 600
      font-size 13px
      color #333

  .error-message
    color #d33
    font-size 13px
    padding 8px 12px
    background-color #fee
    border-left 3px solid #d33
    border-radius 3px

  .preview-section
    background-color #f5f5f5
    padding 12px
    border-radius 4px
    border 1px solid #ddd

    .preview-label
      font-weight 600
      font-size 13px
      color #333
      margin 0 0 8px 0

    .preview-urls
      display flex
      flex-direction column
      gap 8px

      .preview-url
        display flex
        flex-direction column
        gap 2px
        
        .url-type
          font-size 12px
          font-weight 600
          color #666

        .url-value
          font-size 11px
          color #0645ad
          word-break break-all
          font-family monospace
          padding 4px
          background-color white
          border-radius 2px

  button[type="submit"]
    align-self flex-start
    
    &:disabled
      opacity 0.5
      cursor not-allowed